{
    "name": "irite",
    "displayName": "Language iRite",
    "description": "iRite support for Visual Studio Code",
    "version": "0.5.0",
    "publisher": "bryanmullin",
    "galleryBanner": {
        "color": "#4682B4",
        "theme": "dark"
    },
    "engines": {
        "vscode": "0.10.x"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "irite",
        "iRite"
    ],
    "activationEvents": [
        "onLanguage:irite",
        "onCommand:irite.editFormatterParameters"
    ],
    "main": "./src/extension",
    "icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "homepage": "https://github.com/bryanmullin/vscode-language-irite/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/bryanmullin/vscode-language-irite.git"
    },
    "bugs": {
        "url": "https://github.com/bryanmullin/vscode-language-irite/issues"
    },
    "contributes": {
        "languages": [
            {
                "id": "irite",
                "aliases": [
                    "irite",
                    "iRite"
                ],
                "extensions": [
                    ".src",
                    ".iri"
                ]
            }
        ],
        "grammars": [
            {
                "language": "irite",
                "scopeName": "source.irite",
                "path": "./syntaxes/irite.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "irite",
                "path": "./snippets/irite.json"
            }
        ],
        "commands": [
            {
                "command": "irite.editFormatterParameters",
                "title": "irite: Edit Formatter Parameters"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "irite Formatter Configuration",
            "properties": {
                "irite.formatter.engine": {
                    "type": "string",
                    "default": "",
                    "description": "Choose the Formatter engine to be used",
                    "enum": [
                        "jcf",
                        "ptop"
                    ]
                },
                "irite.formatter.enginePath": {
                    "type": "string",
                    "default": "",
                    "description": "Indicates the Formatter app path"
                },
                "irite.formatter.engineParameters": {
                    "type": "string",
                    "default": "",
                    "description": "Indicates the configuration file for the selected engine"
                },
                "irite.format.indent": {
                    "type": "number",
                    "default": 2,
                    "description": "The number of spaces used for indentation"
                },
                "irite.format.wrapLineLength": {
                    "type": "number",
                    "default": 80,
                    "description": "Maximum amount of characters per line"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {},
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "^0.11.x"
    }
}